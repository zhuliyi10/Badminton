<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/info"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.leory.commonlib.widget.CustomImageView
            android:id="@+id/img_head"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/icon_default_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <TextView
            android:id="@+id/txt_name"
            app:layout_constraintLeft_toRightOf="@+id/img_head"
            app:layout_constraintTop_toTopOf="@id/img_head"
            app:layout_constraintBottom_toTopOf="@+id/txt_desc"
            android:text="Leory"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_desc"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"
            app:layout_constraintLeft_toLeftOf="@+id/txt_name"
            app:layout_constraintBottom_toTopOf="@+id/txt_account"
            android:text="这个羽毛球爱好者很懒，什么都没留下..."
            android:textSize="12sp"
            android:textColor="@color/txt_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_account"
            app:layout_constraintTop_toBottomOf="@+id/txt_desc"
            app:layout_constraintBottom_toBottomOf="@+id/img_head"
            app:layout_constraintLeft_toLeftOf="@+id/txt_name"
            android:text="帐号："
            android:textSize="12sp"
            android:textColor="@color/txt_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/icon_arrow_right"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="16dp"
            android:layout_height="16dp" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/login"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/btn_login"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/login_tip"
            android:gravity="center"
            android:text="登陆/注册"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:background="@drawable/shape_bg_login"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login_tip"
            android:layout_marginTop="8dp"
            android:textColor="@color/txt_gray"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="登陆后获取后更多精彩内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mine_num"
        android:layout_marginTop="8dp"
        app:layout_goneMarginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/info"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/works"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintRight_toLeftOf="@+id/follow"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="作品"
                android:textSize="12sp"
                android:textColor="@color/txt_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/follow"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/works"
            app:layout_constraintRight_toLeftOf="@+id/fans"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="关注"
                android:textSize="12sp"
                android:textColor="@color/txt_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fans"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/follow"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="粉丝"
                android:textSize="12sp"
                android:textColor="@color/txt_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mine_behavior"
        app:layout_constraintTop_toBottomOf="@+id/mine_num"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <LinearLayout
            android:id="@+id/fork"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintRight_toLeftOf="@+id/comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_fork"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="我的收藏"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/comment"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/fork"
            app:layout_constraintRight_toLeftOf="@+id/like"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_comment"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="我的评论"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/like"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/comment"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_like"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="我的点赞"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
    <com.leory.badminton.mine.mvp.ui.widget.ItemView
        android:id="@+id/setting"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:left_text="设置"
        app:layout_constraintTop_toBottomOf="@+id/mine_behavior"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</android.support.constraint.ConstraintLayout>