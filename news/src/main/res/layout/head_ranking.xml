<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/randing_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="排名"
        android:gravity="center"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/country_name"
        android:text="国家"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/randing_num"
        android:layout_width="120dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/player_name"
        android:text="名字"
        android:padding="4dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/country_name"
        android:layout_width="80dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/points"
        android:gravity="center"
        android:textSize="12sp"
        android:text="积分"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/player_name"
        android:layout_width="60dp"
        android:layout_height="match_parent" />
    <TextView
        android:text="升+/降-"
        android:id="@+id/txt_raise"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/points"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>