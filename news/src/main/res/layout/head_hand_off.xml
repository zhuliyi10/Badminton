<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/player"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/player11"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/flag11"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/player11_name"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="player1" />

                </LinearLayout>
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/head11"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/player12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/flag12"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_gravity="right"
                        android:id="@+id/player12_name"
                        android:text="player12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/head12"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
            </LinearLayout>
            <TextView
                android:text="排名1"
                android:id="@+id/player1_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="VS"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/player21"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/head21"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/flag21"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:id="@+id/player21_name"
                        android:text="player21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/player22"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/head22"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/flag22"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:id="@+id/player22_name"
                        android:text="player22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:text="排名2"
                android:id="@+id/player2_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/title_record"
        android:textColor="@color/black"
        android:text="历史战绩"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/title_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/score1"
            android:textColor="@color/black"
            android:text="5"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:text=":"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="right"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/score2"
            android:textColor="@color/black"
            android:text="0"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>