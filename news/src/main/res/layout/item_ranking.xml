<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/randing_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:textSize="12sp"
        android:textColor="@color/txt_gray"
        android:text="排名"
        android:gravity="center"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/country"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/randing_num"
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/country_name"
            android:text="国家"
            android:textSize="12sp"
            android:textColor="@color/txt_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="4dp"
            android:id="@+id/img_country_flag"
            android:layout_width="wrap_content"
            android:layout_height="26dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/player_name"
        android:text="名字"
        android:padding="4dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/country"
        android:layout_width="140dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/points"
        android:gravity="center"
        android:textSize="12sp"
        android:text="积分"
        android:textColor="@color/txt_gray"
        app:layout_constraintLeft_toRightOf="@+id/player_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>