<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比赛名称"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比赛时间"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比赛地点"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比赛奖金"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/icon_match"
                android:layout_gravity="right|center_vertical"
                android:layout_width="81dp"
                android:layout_height="27dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/bg_gray"
            app:layout_constraintBottom_toBottomOf="@+id/head">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_16"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1/16决赛"
                    android:textColor="@color/selector_color_match_schedule"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tab_8"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1/8决赛"
                    android:textColor="@color/selector_color_match_schedule"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tab_4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1/4决赛"
                    android:textColor="@color/selector_color_match_schedule"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tab_2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="半决赛"
                    android:textColor="@color/selector_color_match_schedule"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tab_1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="决赛"
                    android:textColor="@color/selector_color_match_schedule"
                    android:textSize="12sp" />
            </LinearLayout>

            <com.leory.badminton.news.mvp.ui.widget.spinner.SpinnerPopView
                android:id="@+id/spinner_type"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </FrameLayout>

        <com.leory.badminton.news.mvp.ui.widget.againstFlow.AgainFlowView
            android:id="@+id/againstFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tab" />

        <FrameLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>
